rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules untuk users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules untuk products collection
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules untuk transactions collection
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules untuk finance collection
    match /finance/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules untuk notifications collection
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules untuk activities collection
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Rules untuk ai_logs collection - PERBAIKAN UNTUK ERROR PERMISSION DENIED
    match /ai_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Rules untuk stock_logs collection (jika ada)
    match /stock_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}